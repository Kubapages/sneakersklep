*{
margin: 0;
padding: 0;
font-family: sans-serif;

}
.container{
	width:100%;
	min-height: 100vh;
	padding-left: 8%;
	padding-right: 8%;
	box-sizing: border-box;
	overflow: hidden;
	

}
.navbar{
width: 100%;
display: flex;
align-items: center;
}

.logo{
	width: 100px;
	cursor: pointer;
	margin: 30px 0;	
	
}

.menu-icon{
	display:none;
	width:25px;
	cursor: pointer;
	
}


@media only screen and (max-width: 800px){
	nav ul{
		position: absolute;
		top: 70px;
		left:0;
		background: #333;
		width: 100%;
		
	}
	
	nav ul li{
		display: block;
		margin-right: 50px;
		margin-top: 10px;
		margin-bottom: 10px;
		
	}
	
	nav ul li a{
		color: white;
	}
	
	.menu-icon{
		display: block;
		
	}
}

nav{
	 flex:1;
	 text-align: right;
	
	
}

nav ul li{
	list-style: none;
	display: inline-block;
	margin-right: 30px;
	
	
}

nav ul li a{
	text-decoration: none;
	font-size: 14px;
	font-weight: BOLD;
	
	
}

nav ul li a:hover{
	color: red;


}


.row{
	display:flex;
	justify-content: space-between;
	align-items: center;
	margin: 100px 0;
	
}

.col-1{
	flex-basis:40px;
	position:relative;
	margin-left: 50px;
	
}

.col-1 h2{
	font-size: 50px;
	
	
}
.col-1 h3{
	font-size: 30px;
	color: #707070;
	font-weight:100;
	margin:20px 0 10px;
}
.col-1 h4{
color: #707070;
}

button{
	width:140px;
	border:0;
	padding: 12px 10px;
	outline: none;
	color:#fff;
	background: linear-gradient(to right, #B22222 , #F08080);
	cursor: pointer;
	border-radius: 5px 5px 5px 5px;
}


.col-1::after{
	content: '';
	width: 10px;
	height: 57%;
	background: linear-gradient(#B22222 , #F08080);
	position: absolute;
	left: -40px;
	top: 8px;
	
	
}

.col-2
{
	position: relative;
	flex-basis: 60%;
	display: flex;
	align-items: center;
	
	
	
}

.col-2 .but{
	width:90%;
	
}


.color-box
{
	position: absolute;
	right: 0;
	top: 0;
	background: linear-gradient(#B22222 , #F08080);
	border-radius: 20px 0 0 20px;
	height: 100%;
	width: 80%;
	z-index: -1; 
	transform: translateX(150px);
	
}


.social img{
	height: 30px;
	margin: 20px;
	cursor: pointer;
	
	
}

.social{
	text-align: center;
	
}

.categories{
	margin:70px 0;
}

.col-3{
	flex-basis:30%;
	min-width: 250px;
	margin-bottom: 30px;
}

.col-3 img{
	min-height: 300px;
	width: 100%;
	
}

.small-container{
	max-width: 1080px;
	margin: auto;
	padding-left: 25px;
	padding-right: 25px;
		
}

.col-4{
	flex-basis:25%;
	padding: 10px;
	min-width: 200px;
	margin-bottom: 50px;	
}

.col-4 img{
	width:100%;
	max-height: 300px;
}

.title{
	text-align: center;
	margin: 0 auto 80px;
	position: relative;
	line-height: 60px;	
}

.title::after{
	content: '';
	background: #ff523b;
	width: 350px;
	height: 5px;
	border-radius: 5px;
	position: absolute;
	bottom: 0px;
	left: 50%;
	transform: translateX(-50%);
	
	
}

.nazwa{
	text-align: center;
	font-weight: normal;
	font-weight: BOLD;
	
}

.col-4 p{
	font-size: 14px;
	text-align: center;
	font-style: italic;
	
}

.footer{
	background-color: #000;
	color: #8a8a8a;
	font-size: 14px;
	padding: 60px 0 20px;
}

.footer p{
	
	color: #8a8a8a;
	
}

.footer h3{
	margin-bottom: 20px;
	color: #fff;
}

.footer-col-1, .footer-col-2, .footer-col-3, .footer-col-4{
	min-width: 300px;
	margin-bottom: 20px;
	
	
}

.footer-col-1{
	flex-basis: 30px;
	

}


.footer-col-2{
	flex: 1;
	text-align: center;
	
}


.footer-col-2 img{
	width: 250px;
	margin-bottom: 20px;
	
}



.footer-col-3, .footer-col-4{
	flex-basis: 12%;
	text-align: center;
	
	
}

ul{
	list-style: none;
}

.app-logo{
	margin-top: 20px;
}

.app-logo img{
width: 140px;	
}



